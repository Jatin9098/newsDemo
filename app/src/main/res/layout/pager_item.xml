<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:transitionName="profile"
        android:id="@+id/imgUrl"
        android:scaleType="matrix"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_above="@+id/txtNewsTitle"
        android:transitionName="txtName"
        android:background="@drawable/txt_name_border2"
        android:id="@+id/txtName"
        android:textColor="@color/white"
        android:padding="@dimen/margin5"
        android:text="@string/app_name"
        android:textSize="@dimen/text15"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/margin10"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/nexa_bold"
        android:transitionName="txtNewsTitle"
        android:background="@drawable/text_faded_bottom"
        android:id="@+id/txtNewsTitle"
        android:textColor="@color/white"
        android:padding="@dimen/margin5"
        android:layout_alignParentBottom="true"
        android:text="@string/app_name"
        android:textSize="@dimen/text25"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>